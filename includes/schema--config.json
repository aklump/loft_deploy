{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "files": {
            "type": "array",
            "maxItems": 3,
            "uniqueItems": true
        },
        "title": {
            "type": "string"
        },
        "url": {
            "type": "string",
            "pattern": "^http"
        },
        "migration_resource": {
            "type": "object",
            "properties": {
                "user": {
                    "$ref": "#/definitions/user"
                },
                "host": {
                    "$ref": "#/definitions/host"
                },
                "path": {
                    "type": "string",
                    "pattern": "^\\/.+$"
                }
            },
            "additionalProperties": false,
            "required": [
                "user",
                "host",
                "path"
            ]
        },
        "user": {
            "type": "string",
            "minLength": 1
        },
        "host": {
            "type": "string",
            "minLength": 1
        },
        "basepath": {
            "type": "string",
            "pattern": "\/.+"
        },
        "role": {
            "type": "string",
            "enum": [
                "dev",
                "prod",
                "staging"
            ]
        },
        "local_drupal": {
            "description": "Define the integration to a Drupal instance.",
            "type": "object",
            "properties": {
                "root": {
                    "type": "string"
                },
                "settings": {
                    "type": "string",
                    "pattern": "settings\\.php$"
                },
                "database": {
                    "type": "string"
                }
            },
            "required": [
                "root"
            ]
        },
        "database_protocol": {
            "type": "string",
            "enum": [
                "tcp",
                "socket",
                "pipe",
                "memory"
            ]
        },
        "database_backups": {
            "type": "string"
        },
        "database_lando": {
            "type": "string",
            "pattern": "^(@drupal\\.host|.+)$"
        },
        "local": {
            "allOf": [
                {
                    "type": "object",
                    "properties": {
                        "title": {
                            "$ref": "#/definitions/title"
                        },
                        "copy_source": {
                            "type": ["array", "object"],
                            "uniqueItems": false
                        },
                        "copy_local_to": {
                            "type": ["array", "object"],
                            "uniqueItems": true
                        },
                        "copy_production_to": {
                            "type": ["array", "object"],
                            "uniqueItems": true
                        },
                        "copy_staging_to": {
                            "type": ["array", "object"],
                            "uniqueItems": true
                        },
                        "location": {
                            "type": "string"
                        },
                        "url": {
                            "$ref": "#/definitions/url"
                        },
                        "basepath": {
                            "$ref": "#/definitions/basepath"
                        },
                        "role": {
                            "$ref": "#/definitions/role"
                        },
                        "files": {
                            "$ref": "#/definitions/files"
                        },
                        "env_file": {
                            "type": "array"
                        }
                    }
                },
                {
                    "anyOf": [
                        {
                            "type": "object",
                            "properties": {
                                "database": {
                                    "type": "object",
                                    "properties": {
                                        "backups": {
                                            "$ref": "#/definitions/database_backups"
                                        },
                                        "lando": {
                                            "$ref": "#/definitions/database_lando"
                                        }
                                    },
                                    "required": [
                                        "backups"
                                    ]
                                },
                                "drupal": {
                                    "$ref": "#/definitions/local_drupal"
                                }
                            },
                            "required": [
                                "database",
                                "drupal"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "database": {
                                    "type": "object",
                                    "properties": {
                                        "backups": {
                                            "$ref": "#/definitions/database_backups"
                                        },
                                        "host": {
                                            "type": "string"
                                        },
                                        "port": {
                                            "type": "integer"
                                        },
                                        "user": {
                                            "type": "string"
                                        },
                                        "password": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "protocol": {
                                            "$ref": "#/definitions/database_protocol"
                                        }
                                    },
                                    "required": [
                                        "backups",
                                        "host",
                                        "user",
                                        "password",
                                        "name"
                                    ]
                                }
                            },
                            "required": [
                                "database"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "database": {
                                    "type": "object",
                                    "properties": {
                                        "backups": {
                                            "$ref": "#/definitions/database_backups"
                                        },
                                        "lando": {
                                            "$ref": "#/definitions/database_lando"
                                        }
                                    },
                                    "required": [
                                        "backups",
                                        "lando"
                                    ]
                                }
                            },
                            "required": [
                                "database"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "database": {
                                    "type": "object",
                                    "properties": {
                                        "backups": {
                                            "$ref": "#/definitions/database_backups"
                                        },
                                        "uri": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "backups",
                                        "uri"
                                    ]
                                }
                            },
                            "required": [
                                "database"
                            ]
                        }
                    ]
                }
            ]
        },
        "remote": {
            "oneOf": [
                {
                    "description": "To support Pantheon servers.",
                    "type": "object",
                    "properties": {
                        "files": {
                            "$ref": "#/definitions/files"
                        },
                        "pantheon": {
                            "type": "object",
                            "properties": {
                                "uuid": {
                                    "type": "string"
                                },
                                "site": {
                                    "type": "string"
                                },
                                "machine_token": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "uuid",
                                "site",
                                "machine_token"
                            ]
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "files",
                        "pantheon"
                    ]
                },
                {
                    "description": "To support SSH connections.",
                    "type": "object",
                    "properties": {
                        "config": {
                            "type": "string",
                            "pattern": "\\/\\.loft_deploy$"
                        },
                        "script": {
                            "type": "string",
                            "pattern": "\\/loft_deploy(\\.sh)?|ldp$"
                        },
                        "user": {
                            "$ref": "#/definitions/user"
                        },
                        "host": {
                            "$ref": "#/definitions/host"
                        },
                        "port": {
                            "type": "integer"
                        },
                        "password": {
                            "type": "string"
                        },
                        "ssh": {
                            "type": "string",
                            "description": "A command (or string of commands) to be executed at the beginning of each ssh session; it can be used to export variables or source remote-only scripts as needed before running the remote loft_deploy.",
                            "examples": [
                                "~/.profile",
                                "export LOFT_DEPLOY_PHP=/usr/local/bin/php72"
                            ]
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "config",
                        "script",
                        "user",
                        "host"
                    ]
                }
            ]
        }
    },
    "type": "object",
    "properties": {
        "stage_may_pull_prod": {
            "type": "boolean"
        },
        "local": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/local"
                }
            ],
            "required": [
                "url",
                "role",
                "basepath"
            ]
        },
        "production": {
            "$ref": "#/definitions/remote"
        },
        "staging": {
            "$ref": "#/definitions/remote"
        },
        "migration": {
            "type": "object",
            "properties": {
                "title": {
                    "$ref": "#/definitions/title"
                },
                "database": {
                    "$ref": "#/definitions/migration_resource"
                },
                "files": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/migration_resource"
                    }
                },
                "push_to": {
                    "type": "object",
                    "properties": {
                        "host": {
                            "$ref": "#/definitions/host"
                        },
                        "user": {
                            "$ref": "#/definitions/user"
                        }
                    }
                }
            },
            "required": [
                "title"
            ]
        },
        "bin": {
            "type": "object",
            "properties": {
                "mysql": {
                    "type": "string",
                    "pattern": "^/"
                },
                "mysqldump": {
                    "type": "string",
                    "pattern": "^/"
                },
                "gzip": {
                    "type": "string",
                    "pattern": "^/"
                },
                "gunzip": {
                    "type": "string",
                    "pattern": "^/"
                },
                "terminus": {
                    "type": "string",
                    "pattern": "^/"
                },
                "scp": {
                    "type": "string",
                    "pattern": "^/"
                },
                "lando": {
                    "type": "string",
                    "pattern": "^/"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "local"
    ],
    "additionalProperties": false
}
